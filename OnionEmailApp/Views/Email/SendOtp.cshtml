@{
    ViewData["Title"] = "Send OTP";
}

<h2>Send OTP</h2>

<form asp-action="SendOtp" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <button type="submit" class="btn btn-primary">Send OTP</button>
</form>

<form asp-action="SendOtpToAll" method="post" class="mt-3">
    <button type="submit" class="btn btn-secondary">Send OTP to All Registered Emails</button>
</form>

<form asp-action="AddEmail" method="post" class="mt-3">
    <div class="form-group">
        <label for="newEmail">Add Email to Database</label>
        <input type="email" class="form-control" id="newEmail" name="emailAddress" required>
    </div>
    <button type="submit" class="btn btn-success">Add Email</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="mt-3 alert alert-info">
        @ViewBag.Message
    </div>
}