@{
    ViewData["Title"] = "Send OTP";
}

<h2>Send OTP</h2>

<form id="otpForm">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <button type="submit" class="btn btn-primary">Send OTP</button>
</form>

<button id="sendToAll" class="btn btn-secondary mt-3">Send OTP to All Registered Emails</button>

<form id="addEmailForm" class="mt-3">
    <div class="form-group">
        <label for="newEmail">Add Email to Database</label>
        <input type="email" class="form-control" id="newEmail" name="newEmail" required>
    </div>
    <button type="submit" class="btn btn-success">Add Email</button>
</form>

<div id="otpResult" class="mt-3"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#otpForm').on('submit', function (e) {
                e.preventDefault();

                $.ajax({
                    url: '/Email/SendOtp',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        $('#otpResult').html(`OTP sent successfully: ${response.otp}`);
                    },
                    error: function () {
                        $('#otpResult').html('Failed to send OTP.');
                    }
                });
            });

            $('#sendToAll').on('click', function () {
                $.ajax({
                    url: '/Email/SendOtpToAll',
                    type: 'POST',
                    success: function (response) {
                        $('#otpResult').html(`OTP sent to all registered emails: ${response.otp}`);
                    },
                    error: function () {
                        $('#otpResult').html('Failed to send OTP to all emails.');
                    }
                });
            });

            $('#addEmailForm').on('submit', function (e) {
                e.preventDefault();

                $.ajax({
                    url: '/Email/AddEmail',
                    type: 'POST',
                    data: { emailAddress: $('#newEmail').val() },
                    success: function (response) {
                        $('#otpResult').html('Email added successfully.');
                    },
                    error: function () {
                        $('#otpResult').html('Failed to add email.');
                    }
                });
            });
        });
    </script>
}